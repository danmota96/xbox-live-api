generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                 String  @id @default(uuid())
  title              String
  description        String
  price              Float
  year               Int
  TrailerYouTubeUrl  String
  GameplayYouTubeUrl String
  ImdbScore          Int
  image              String
  genre              Genre[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("game")
}

model Genre {
  id    String @id @default(uuid())
  genre String
  game  Game[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("genre")
}

model User {
  id       String @id @default(uuid())
  name     String
  cpf      String @unique
  email    String @unique
  password String
  image    String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

